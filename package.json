{
  "name": "emery",
  "version": "1.4.2",
  "description": "Utilities to help polish the rough parts of TypeScript.",
  "main": "dist/emery.cjs.js",
  "module": "dist/emery.esm.js",
  "repository": "https://github.com/thinkmill/emery.git",
  "homepage": "https://emery-ts.vercel.app",
  "author": "jossmac <jossmac@users.noreply.github.com>",
  "license": "MIT",
  "private": false,
  "files": [
    "dist",
    "src",
    "assertions",
    "checks",
    "guards",
    "opaques",
    "utils"
  ],
  "keywords": [
    "ts",
    "typescript",
    "utils",
    "utilities"
  ],
  "scripts": {
    "format": "prettier --write ./src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collect-coverage",
    "open:coverage": "open coverage/lcov-report/index.html",
    "lint:eslint": "eslint ./src --ext .js,.ts",
    "lint:prettier": "prettier --check ./src",
    "lint:types": "tsc",
    "lint": "yarn lint:prettier && yarn lint:eslint && yarn lint:types",
    "docs:dev": "next dev docs",
    "docs:build": "next build docs",
    "prepublishOnly": "preconstruct build",
    "release": "changeset publish",
    "changeset": "changeset"
  },
  "jest": {
    "preset": "ts-jest",
    "testRegex": "/.*test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "preconstruct": {
    "entrypoints": [
      "index.ts",
      "assertions.ts",
      "checks/index.ts",
      "guards.ts",
      "opaques.ts",
      "utils/index.ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.17.12",
    "@babel/preset-env": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@markdoc/markdoc": "^0.1.2",
    "@markdoc/next.js": "^0.1.4",
    "@preconstruct/cli": "^2.1.5",
    "@types/jest": "^27.5.1",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "copy-to-clipboard": "^3.3.1",
    "eslint": "^8.15.0",
    "jest": "^28.1.0",
    "next": "^12.1.6",
    "prettier": "2.6.2",
    "prism-react-renderer": "^1.3.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4",
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.0"
  }
}
